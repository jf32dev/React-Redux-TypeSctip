{
  "name": "redbull",
  "version": "0.1.0",
  "collaborators": [
    "Hans C Yustiawan (hans.yustiawan@bigtincan.com)",
    "Michaela Hercogova (michaela.hercogova@bigtincan.com)"
  ],
  "private": true,
  "homepage": "./",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/react-hooks": "^3.7.0",
    "@testing-library/user-event": "^7.1.2",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^24.0.0",
    "@types/remote-redux-devtools": "^0.5.4",
    "@typescript-eslint/eslint-plugin": "~3.10.0",
    "@typescript-eslint/parser": "~3.10.0",
    "babel-jest": "^24.9.0",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "commitizen": "^4.2.2",
    "cz-customizable": "^6.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "6.6.0",
    "eslint-config-airbnb-typescript": "9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-loader": "3.0.3",
    "eslint-plugin-flowtype": "4.6.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "4.3.0",
    "jest": "26.0.0",
    "jest-environment-jsdom-fourteen": "1.0.1",
    "jest-enzyme": "^7.1.2",
    "jest-resolve": "24.9.0",
    "jest-watch-typeahead": "0.4.2",
    "lerna": "^3.22.1",
    "lint-staged": ">=10",
    "minimist": "^1.2.5",
    "prettier": "2.0.5",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended": "~3.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.18.0",
    "syncpack": "^5.6.10",
    "ts-jest": "^26.4.4"
  },
  "scripts": {
    "affected:build": "node scripts/affected.js -c 'lerna run --parallel build'",
    "affected:list": "node scripts/affected.js -c 'lerna ls -la'",
    "affected:typecheck": "node scripts/affected.js -c 'lerna run --parallel typecheck'",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream --scope",
    "build:uat": "lerna run build:uat --stream --scope",
    "build:prod": "lerna run build:prod --stream --scope",
    "clean": "lerna clean",
    "commit": "cz",
    "lint": "eslint --fix packages/**/src/**/*.ts packages/**/src/**/*.tsx apps/**/src/**/*.ts apps/**/src/**/*.tsx",
    "remotedev": "remotedev --hostname=localhost --port=8000",
    "start": "lerna run start --stream --scope",
    "storybook": "lerna run storybook --stream --scope",
    "stylelint": "stylelint packages/**/*.scss apps/**/*.scss --fix",
    "syncpack-dependencies": "syncpack list",
    "syncpack-fix": "syncpack fix-mismatches",
    "syncpack-list": "syncpack list-mismatches",
    "react-devtools": "npx react-devtools",
    "test": "lerna run test --stream --scope"
  },
  "syncpack": {
    "prod": "true",
    "dev": "true",
    "peer": "true",
    "sortAz": [
      "dependencies",
      "devDependencies",
      "peerDependencies",
      "scripts"
    ],
    "sortFirst": [
      "name",
      "description",
      "version",
      "collaborators",
      "private",
      "homepage",
      "main"
    ],
    "source": [
      "package.json",
      "packages/*/package.json",
      "apps/*/package.json"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*",
      "apps-na/*"
    ],
    "nohoist": [
      "**/react-dev-utils",
      "**/react-scripts"
    ]
  }
}
